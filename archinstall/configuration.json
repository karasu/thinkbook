{
    "additional-repositories": [
        "multilib"
    ],
    "audio": "pipewire",
    "bootloader": "systemd-bootctl",
    "config_version": "2.5.6",
    "debug": false,
    "desktop-environment": "sway",
    "gfx_driver": "Intel (open-source)",
    "harddrives": [
        "/dev/nvme0n1"
    ],
    "hostname": "thinkbook",
    "kernels": [
        "linux"
    ],
    "keyboard-layout": "es",
    "mirror-region": {
        "Spain": {
            "http://ftp.rediris.es/mirror/archlinux/$repo/os/$arch": true,
            "https://mirror.librelabucm.org/archlinux/$repo/os/$arch": true,
            "https://mirrors.marquitos.space/archlinux/$repo/os/$arch": true
        }
    },
    "nic": {
        "dhcp": true,
        "dns": null,
        "gateway": null,
        "iface": null,
        "ip": null,
        "type": "nm"
    },
    "no_pkg_lookups": false,
    "offline": false,
    "packages": [
        "awesome-terminal-fonts",
        "blueman",
        "bluez",
        "bluez-utils",
        "brightnessctl",
        "btop",
        "cliphist",
        "file-roller",
        "ffmpegthumbnailer",
        "git",
        "greetd",
        "grim",
        "gst-plugin-pipewire",
        "gst-plugins-base",
        "gst-plugins-bad",
        "gst-plugins-good",
        "gst-plugins-ugly",
        "gtk3",
        "gvfs",
        "hyprland",
        "imv",
        "jq",
        "kitty",
        "light",
        "lsd",
        "lxappearance",
        "mako",
        "mlocate",
        "mpv",
        "mtools",
        "nano",
        "nerd-fonts",
        "network-manager-applet",
        "nfs-utils",
        "ntfs-3g",
        "pacman-contrib",
        "pavucontrol",
        "pipewire",
        "polkit-gnome",
        "powerline",
        "python",
        "python-requests",
        "qt5-wayland", 
        "qt5ct",
        "qt6-wayland", 
        "qt6ct",
        "qt5-svg",
        "qt5-quickcontrols2",
        "qt5-graphicaleffects",
        "slurp",
        "starship",
        "swappy",
        "swayidle",
        "swaylock",
        "thunar",
        "thunar-archive-plugin",
        "vulkan-intel",
        "waybar",
        "wget",
        "wireplumber",
        "wl-clipboard",
        "wofi",
        "xdg-desktop-portal-hyprland",
        "xfce-settings",
        "youtube-dl",
        "zathura",
        "zathura-pdf-poppler",
        "zsh",
        "zsh-autosuggestions",
        "zsh-completions",
        "zsh-theme-powerlevel10k",
        "zsh-syntax-highlighting"
    ],
    "profile": {
        "path": "hyprland.py"
    },
    "script": "guided",
    "services": [
        "bluetooth",
        "greetd"
    ],
    "silent": false,
    "swap": true,
    "sway_sys_priv_ctrl": [
        "polkit"
    ],
    "sys-encoding": "utf-8",
    "sys-language": "ca_ES.UTF-8",
    "timezone": "Europe/Rome",
    "version": "2.5.6",
    "custom-commands": [
        "usermod -aG wheel karasu",
        "sed 's/# %wheel/%wheel/g' /etc/sudoers",
        "git clone https://github.com/karasu/thinkbook.git /thinkbook",
        "chown -R 1000:1000 /thinkbook",
        "/thinkbook/post/post.sh"
    ]
}
